<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>

    <% include ../static/partials/navbar.ejs %>

    <main class="container">

      <% include ../static/partials/messages.ejs %>

      <h1><%= `${user.username}'s profile` %></h1>
    <h2>  <%= currentUser.role %> </h2>

      <hr>

      <% if(currentUser.role == 0) { %>

        <div class="payment-option">

            <a href="/users/payment" class="btn btn-lg btn-success">Upgrade to Premium</a>
            <strong>Upgrade to premium for only $15 and get access to even more features!</strong>

        </div>

      <% } %>

      <hr>

      <% if(currentUser.role == 1) { %>

        <form action="/users/<%= currentUser.id %>/updatestandard" method="POST">
           <input type="submit" value="Downgrade your account" class="btn btn-lg btn-warning"/>
        </form>

      <% } %>


    </main>

    <% include ../static/partials/baseScripts.ejs %>

  </body>
</html>
